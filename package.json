{
	"scripts": {
		"dev:react-chat": "pnpm --filter moki-sdk dev & pnpm --filter react-chat dev",
		"dev": "pnpm --filter moki-sdk dev",
		"build": "pnpm --filter moki-sdk build",
		"build:bundle": "pnpm --filter moki-sdk build:bundle",
		"size": "pnpm build && pnpm build:bundle && size-limit"
	},
	"devDependencies": {
		"@size-limit/file": "^11.2.0",
		"size-limit": "^11.2.0",
		"typescript": "5.9.3"
	},
	"size-limit": [
		{
			"name": "Full SDK (minified bundle)",
			"path": "src/dist/index.js",
			"limit": "3 KB"
		},
		{
			"name": "Full SDK (unminified)",
			"path": "src/_esm/**/*.js",
			"limit": "15 KB"
		}
	]
}